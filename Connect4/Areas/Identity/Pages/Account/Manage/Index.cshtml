@page
@using Connect4.Models
@model IndexModel
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
@if (UserManager.GetUserAsync(User).Result.Nascimento.Day == DateTime.Now.Day &&
   UserManager.GetUserAsync(User).Result.Nascimento.Month == DateTime.Now.Month)
{
    <h6>Parabéns, hoje é seu aniversário!</h6>
}
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Nascimento"></label>
                <input asp-for="Input.Nascimento" class="form-control" />
                <span asp-validation-for="Input.Nascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CPF"></label>
                <input asp-for="Input.CPF" class="form-control" />
                <span asp-validation-for="Input.CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CEP"></label>
                <input asp-for="Input.CEP" class="form-control" />
                <span asp-validation-for="Input.CEP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Endereco"></label>
                <div class="spinner-border" role="status" id="waitAddress" style="display: none;">
                    <span class="sr-only">Loading...</span>
                </div>
                <input asp-for="Input.Endereco" class="form-control" readonly />
                <span asp-validation-for="Input.Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NumeroCasa"></label>
                <input asp-for="Input.NumeroCasa" class="form-control" />
                <span asp-validation-for="Input.NumeroCasa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_CEPScriptPartial" />
    <partial name="_MaskScriptPartial" />
}